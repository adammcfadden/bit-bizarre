<h1> <%= @user.email %></h1>

<% if @user.items.any? %>
  <% @user.items.in_groups_of(3, false) do |item_group| %>
    <div class="row">
      <% item_group.each do |item| %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading"><%= item.name %></div>
            <div class="panel-body">
              <%= item.body %>
            </div>
            <div class="panel-footer">
              <%= link_to item_path(item), class: "btn btn-success btn-block btn-sm" do %>
                <span class="glyphicon glyphicon-shopping-cart"> <%= number_to_currency(item.price, :unit => "$") %></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<% if is_admin? %>
  <%= link_to "Delete User", user_path(@user), data: {confirm: "Destroy User?", method: 'delete'}, class: "btn btn-danger btn-block" %>
<% end %>
