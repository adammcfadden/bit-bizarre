<%= render 'layouts/errors', object: @item %>

<%= bootstrap_form_for(@item) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :body %>
  <%= f.number_field :price, step: '.01' %>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit data: {disable_with: 'S A V I N G'}, class: "btn btn-block" %>
<% end %>
