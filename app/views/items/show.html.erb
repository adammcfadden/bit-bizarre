<%= @item.name %>
<%= @item.body %>
<%= number_to_currency(@item.price, unit: '$') %>
<% if @item.avatar_file_name != nil %>
  <%= image_tag @item.avatar.url(:medium) %>
<% end %>

<%= render template: "charges/new", item: @item %>

<%= link_to 'Edit Item', edit_item_path(@item) %>
<%= link_to 'Delete Item', item_path(@item), method: :delete %>
