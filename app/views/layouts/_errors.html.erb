<% if object.errors.any? %>
  <div id="error_explanation">
    <h2>Please Fix the Following Errors:</h2>
    <h2><%= pluralize(object.errors.count, "error") %></h2>

    <ul>
    <% object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
